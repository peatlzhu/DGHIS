<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
                    xmlns:hc="clr-namespace:HandyControl.Controls;assembly=HandyControl"
                    xmlns:o="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">


    <ResourceDictionary.MergedDictionaries>      
        <ResourceDictionary Source="../Resources/Fonts/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextBlockFabricIcons" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FabricIcons}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="TextBlockAppIcons" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource AppIcons}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <DrawingBrush o:Freeze="True" Opacity=".1" x:Key="CloudDrawingBrush" RenderOptions.CacheInvalidationThresholdMinimum="0.5" RenderOptions.CacheInvalidationThresholdMaximum="2.0" RenderOptions.CachingHint="Cache" Viewport="0,0,157,157" ViewportUnits="Absolute" Stretch="Uniform" TileMode="Tile">
        <DrawingBrush.Drawing>
            <ImageDrawing o:Freeze="True" ImageSource="../images/cloud.png" Rect="0,0,157,157"/>
        </DrawingBrush.Drawing>
    </DrawingBrush>

 

</ResourceDictionary>
